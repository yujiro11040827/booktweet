<div class="contents row">
  <div class="container">
    <h3>編集する</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "本の題名" %>
      <%= form.text_field :author, placeholder: "著者" %>
      <%= form.collection_select :genre_id, Genre.all, :id, :name, {}%>
      <%= form.text_area :impressions, placeholder: "感想", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>